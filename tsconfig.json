{
   "lib": ["es2015"],
   "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "allowJs": true,
      "outDir": "./dist",
      "rootDir": "src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "declaration": true
   },
   "include": ["src"],
   "exclude": [
     "node_modules",
     "**/*.spec.ts"
   ]
}
